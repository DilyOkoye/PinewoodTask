@model List<Crud.Core.Models.Customer> 
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Customers</h1>
</div>

<a class="btn btn-secondary" asp-controller="Home" asp-action="Add" >Add</a>
<table class="table">
    <thead>
    <tr>
        <th>
            Name
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            Action
        </th>
    </tr>
    
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>
                    @customer.Name
                </td>
                <td>
                    @customer.Email
                </td>
                <td>
                    @customer.Phone
                </td>
                <td>
                    <a class="btn btn-primary" asp-controller="Home" asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
